{{!
@template quiz_aitext/report

    AI Text report page for quiz report aitext plugin.

    Classes required for JS:
    * None

    Data attributes required for JS:
    * None

    Context variables required for this template:
    * pluginname - string - Name of the plugin
    * description - string - Description of the aitext report
    * quizname - string - Name of the quiz
    * coursename - string - Name of the course
    * cmid - int - Course module ID
    * has_analysis - bool - Whether analysis data is available
    * analysis_message - string - Message about analysis status
    * student_submissions - array - Array of student submission data with responses
    * error_details - string - Error message if analysis failed
    * total_submissions_count - int - Total number of student submissions found
    * comments - string - AI-generated summary of student comments

    Example context (json):
    {
        "pluginname": "Report AI Text",
        "description": "AI Text report",
        "quizname": "Sample Quiz",
        "coursename": "Sample Course",
        "cmid": 42,
        "has_analysis": true,
        "analysis_message": "Analysis Complete",
        "student_submissions": [
            {
                "userid": 123,
                "username": "John Doe",
                "questionid": 456,
                "questiontype": "essay",
                "questiontext": "Explain the concept of photosynthesis.",
                "response_text": "Photosynthesis is the process by which...",
                "fraction": 8.5,
                "maxmark": 10,
                "score_percentage": 85.0
            }
        ],
        "total_submissions_count": 1,
        "comments": "Summary of student comments..."
    }
}}

<div class="box py-3 generalbox">
<h4>{{#str}} templatereport, quiz_aitext {{/str}}</h4>
    <p>{{#str}} templatedescription, quiz_aitext {{/str}}</p>

<h5>{{#str}} templateinfo, quiz_aitext {{/str}}</h5>
         <ul>
             <li>{{#str}} quizname, quiz_aitext {{/str}}: <strong>{{quizname}}</strong></li>
             <li>{{#str}} coursename, quiz_aitext {{/str}}: <strong>{{coursename}}</strong></li>
         </ul>

<div class="mt-3">
              <form method="post" action="report.php">
                  <input type="hidden" name="mode" value="aitext">
                  <input type="hidden" name="id" value="{{cmid}}">

                  <div class="mb-3">
                      <label for="prompt" class="form-label">{{#str}} prompt, quiz_aitext {{/str}}</label>
                      <textarea id="prompt" name="prompt" class="form-control" rows="3" placeholder="{{#str}} prompt_placeholder, quiz_aitext {{/str}}">Summarise this text indicating what students have learnt and what they have not learnt</textarea>
                  </div>

                  <button type="submit" class="btn btn-primary" name="submit" value="submit">
                      {{#str}} analyst, quiz_aitext {{/str}}
                  </button>
              </form>
          </div>
    </div>

    <div class="mt-3">
        <p class="text-muted">{{#str}} templatenote, quiz_aitext {{/str}}</p>
    </div>
</div>

{{#has_analysis}}
<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">{{analysis_message}}</h5>
    </div>
    <div class="card-body">
        {{#error_details}}
        <div class="alert alert-danger">
            <strong>Error:</strong> {{error_details}}
        </div>
        {{/error_details}}

        {{#comments}}
        <div class="card-text mb-4">
            <h5 class="card-title">{{#str}} commentsummary, quiz_aitext {{/str}}</h5>
            <p class="card-text">{{{comments}}}</p>
        </div>
        <hr>
        {{/comments}}

        {{#student_submissions}}
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Student</th>
                        <th>Question Type</th>
                        <th>Question</th>
                        <th>Response</th>
                        <th>Score</th>
                        <th>Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    {{#student_submissions}}
                    <tr>
                        <td>
                            <strong>{{username}}</strong><br>
                            <small class="text-muted">User ID: {{userid}}</small>
                        </td>
                        <td>
                            <span class="badge bg-secondary">{{questiontype}}</span>
                        </td>
                        <td>
                            <div class="question-text">{{{questiontext}}}</div>
                        </td>
                        <td>
                            <div class="response-text">{{{response_text}}}</div>
                        </td>
                        <td>
                            <span class="badge bg-success">{{fraction}} / {{maxmark}}</span>
                        </td>
                        <td>
                            <span class="badge bg-info">{{score_percentage}}%</span>
                        </td>
                    </tr>
                    {{/student_submissions}}
                </tbody>
            </table>
        </div>
        <div class="alert alert-info">
            Total student submissions found: {{total_submissions_count}}
        </div>
        {{/student_submissions}}

        {{#no_attempts_found}}
        <div class="alert alert-warning">
            {{analysis_message}}
        </div>
        {{/no_attempts_found}}
    </div>
</div>
{{/has_analysis}}